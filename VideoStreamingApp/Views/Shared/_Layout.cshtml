<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - B-Bop TV</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="~/img/logo.png" alt="Logo" class="logo">
            </a>
            <div class="ms-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="btn btn-outline-light me-2" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
                }
                else
                {
                    <a class="btn btn-outline-light me-2" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    <a class="btn btn-outline-light" asp-area="Identity" asp-page="/Account/Register">Register</a>
                }
            </div>
        </nav>
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2024 - B-Bop TV</p>
        </footer>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
